# Example secrets.yaml file for ESPHome BenQ Projector Control
# Copy this file to secrets.yaml and fill in your actual values

# WiFi Configuration
wifi_ssid: "YOUR_WIFI_NETWORK_NAME"
wifi_password: "YOUR_WIFI_PASSWORD"
domain_name: "YOUR_DOMAIN.COM"  # Optional: your local domain

# ESPHome API Configuration
# Generate a random 32-character key or use: esphome random-key
api_encryption_key: "REPLACE_WITH_32_CHARACTER_RANDOM_KEY"

# OTA (Over-The-Air) Update Password
# Use a strong password for security
ota_password: "YOUR_OTA_PASSWORD"
